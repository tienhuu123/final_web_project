    <!DOCTYPE html>
    <html>

    <head>
        <title>History Cart</title>
        <style>

        </style>
    </head>

    
        <div id="cart">
            <h1>History Cart</h1>
            <table>
                <thead>
                    <tr>
                        <th>ma don hang</th>

                        <th>Date</th>
                        <th>Fullname</th>
                        <th>Quantity</th>
                        <th>Trạng thái</th>
                        <th>Địa chỉ</th>
                        <th>Total</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% if(typeof invoice !='undefined' ){if(quantity==0){ %>
                            <%}else{ invoice.map((invo,i)=>{%>

                                <td>
                                    <%= invo.id%>
                                </td>
                                <td>
                                    <%= invo.date%>
                                </td>
                                <td>
                                    <%= invo.fullname%>
                                </td>
                                <td>
                                    <%= invo.sum%>
                                </td>
                                <td>

                                    <%= invo.status==0?"Processing":invo.status==2?"Order has been cancelled":"Order confirmed"%>

                                </td>


                                <td>
                                    <%= invo.address%>

                                </td>
                                <td>
                                    <%= invo.sumtotal%>
                                </td>

                    </tr>
                    <%})}}%>




                </tbody>
            </table>
        </div>
    

