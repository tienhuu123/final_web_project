<body>


    <div class="main">

        <form action="/register" method="POST" class="form" id="form-1">
            <h3 class="heading">Register</h3>
            <p class="check-error">
                <%- typeof err=='undefined' ?"":err %>
            </p>
            <div class="spacer"></div>

            <div class="form-group">
                <label for="fullname" class="form-label">Fullname</label>
                <input id="fullname" name="fullname" type="text" placeholder="VD: Nam Phuong" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="text" placeholder="VD: namphuong@gmail.com" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" placeholder="Enter password" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="password_confirmation" class="form-label">Password Confirmation</label>
                <input id="password_confirmation" name="password_confirmation" placeholder="Enter the password"
                    type="password" class="form-control">
                <span class="form-message"></span>
            </div>
            <div class="form-group">
                <label for="phone" class="form-label">Phone</label>
                <input id="phone" name="phone" placeholder="Enter the phone" type="text" class="form-control">
                <span class="form-message"></span>
            </div>

